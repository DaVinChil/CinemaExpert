<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302B2B"
    tools:context=".SignLogActivity">

    <TextView
        android:id="@+id/expert_text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="EXPERT"
        android:textSize="48sp"
        android:transitionName="expert_trans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348" />

    <TextView
        android:id="@+id/cinema_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/plexsans_extralight"
        android:text="CINEMA"
        android:textColor="#FFC700"
        android:textSize="24sp"
        android:transitionName="cinema_trans"
        app:layout_constraintBottom_toBottomOf="@+id/expert_text"
        app:layout_constraintEnd_toEndOf="@+id/expert_text"
        app:layout_constraintStart_toStartOf="@+id/expert_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/log_in_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/yellow_orange_gradient"
        android:text="@string/login_caps"
        android:textAppearance="@style/inter_extrabold_style"
        android:textColor="#302B2B"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expert_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_sign_up_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#302B2B"
        android:paddingVertical="10dp"
        android:text="@string/sign_up_caps"
        android:textAppearance="@style/inter_semibold_style"
        android:textColor="#BC0000"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_in_button"
        app:strokeColor="#BC0000"
        app:strokeWidth="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>