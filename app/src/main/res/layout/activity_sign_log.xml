<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignLogActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/john_wick_5_fire_dog" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/intro_image_fade" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/black_orange_gradient">

        <TextView
            android:id="@+id/expert_text"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:fontFamily="@font/inter_extrabold"
            android:text="EXPERT"
            android:textSize="56sp"
            android:transitionName="expert_trans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.120000005" />

        <TextView
            android:id="@+id/cinema_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43dp"
            android:fontFamily="@font/plexsans_extralight"
            android:text="CINEMA"
            android:textColor="#FFC700"
            android:textSize="32sp"
            android:transitionName="cinema_trans"
            app:layout_constraintBottom_toBottomOf="@+id/expert_text"
            app:layout_constraintEnd_toEndOf="@+id/expert_text"
            app:layout_constraintStart_toStartOf="@+id/expert_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_started_button"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_orange_gradient"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="@string/get_started"
            android:textAppearance="@style/inter_extrabold_style"
            android:textColor="#1C1C1C"
            android:textSize="20sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expert_text"
            app:layout_constraintVertical_bias="0.32" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="338dp"
            android:layout_height="35dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/inter_regular"
            android:letterSpacing="0.07"
            android:text="@string/intro_sentence"
            android:textAlignment="textEnd"
            android:textColor="#A0FF9D42"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>